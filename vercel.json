{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/create-checkout-session",
      "destination": "/server.js"
    },
    {
      "source": "/api/verify-checkout",
      "destination": "/server.js"
    }
  ],
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "resetmypattern.com"
        }
      ],
      "destination": "https://mypatternreset.com/$1",
      "permanent": true
    },
    {
      "source": "/legal",
      "destination": "/legal.html",
      "permanent": true
    },
    {
      "source": "/legal/",
      "destination": "/legal.html",
      "permanent": true
    },
    {
      "source": "/product/breakup-course",
      "destination": "/",
      "permanent": false
    },
    {
      "source": "/product/breakup-course.html",
      "destination": "/",
      "permanent": false
    },
    {
      "source": "/product/breakup-course/",
      "destination": "/",
      "permanent": false
    },
    {
      "source": "/course/breakup-course",
      "destination": "/",
      "permanent": false
    },
    {
      "source": "/course/breakup-course.html",
      "destination": "/",
      "permanent": false
    },
    {
      "source": "/course/breakup-course/",
      "destination": "/",
      "permanent": false
    },
    {
      "source": "/letitout",
      "destination": "/",
      "permanent": false
    },
    {
      "source": "/letitout.html",
      "destination": "/",
      "permanent": false
    },
    {
      "source": "/letitout/",
      "destination": "/",
      "permanent": false
    }
  ]
} 